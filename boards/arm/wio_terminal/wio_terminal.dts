/dts-v1/;
#include <atmel/samd5xx19.dtsi>
#include "wio_terminal-pinctrl.dtsi"

/ {
	model = "Wio Terminal";
	compatible = "seeed,wio-terminal";

	chosen {
		zephyr,console = &cdc_acm_uart0;
		zephyr,shell-uart = &sercom2;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0; // todo add support w25q32jvwj0 external flash (4MB)
		zephyr,code-partition = &code_partition;
		zephyr,display = &ili9341;
	};

	/* These aliases are provided for compatibility with samples */
	aliases {
		led0 = &led0;
		lcdbacklight = &lcd_backlight;
		sw0 = &user_button_0;
		sw1 = &user_button_1;
		sw2 = &user_button_2;
		accel0 = &lis3dh;
	};

	leds {
		compatible = "gpio-leds";
		led0: led_0 {
			gpios = <&porta 15 GPIO_ACTIVE_LOW>;
			
			label = "LED";
		};

		lcd_backlight: lcd_backlight {
			gpios = <&portc 5 GPIO_ACTIVE_HIGH>;
			label = "LCD Backlight";
		};
	};

	gpio_keys {
		compatible = "gpio-keys";
		user_button_0: button_0 {
			label = "User Button 0";
			gpios = <&portc 26 1>;
		};
		user_button_1: button_1 {
			label = "User Button 1";
			gpios = <&portc 27 1>;
		};
		user_button_2: button_2 {
			label = "User Button 2";
			gpios = <&portc 28 1>;
		};
	};

};

&cpu0 {
	clock-frequency = <120000000>;
};

// RTL8720D SPI is on SERCOM0
&sercom0 {
	status = "okay";
	compatible = "atmel,sam0-spi";
	#address-cells = <1>;
	#size-cells = <0>;
	dipo = <2>; // MISO (on PAD2) as DI
	dopo = <0>; // MOSI (on PAD0) as DO

	pinctrl-0 = <&sercom0_spi_default>;
	pinctrl-names = "default";

	cs-gpios = <&portc 25 GPIO_ACTIVE_LOW>;
};

&sercom1 {
	status = "okay";
	compatible = "atmel,sam0-uart";
	current-speed = <115200>;
	rxpo = <1>;
	txpo = <0>;
	pinctrl-0 = <&sercom1_uart_default>;
	pinctrl-names = "default";
};

&sercom2 {
	status = "okay";
	compatible = "atmel,sam0-uart";
	current-speed = <115200>;
	rxpo = <1>;
	txpo = <0>;
	pinctrl-0 = <&sercom2_uart_default>;
	pinctrl-names = "default";
};

&sercom3 {
	status = "okay";
	compatible = "atmel,sam0-i2c";
	clock-frequency = <I2C_BITRATE_FAST>;
	#address-cells = <1>;
	#size-cells = <0>;

	pinctrl-0 = <&sercom3_i2c_default>;
	pinctrl-names = "default";
};

&sercom4 {
	status = "okay";
	compatible = "atmel,sam0-i2c";
	clock-frequency = <I2C_BITRATE_FAST>;
	#address-cells = <1>;
	#size-cells = <0>;

	pinctrl-0 = <&sercom4_i2c_default>;
	pinctrl-names = "default";

	lis3dh:lis3dh@18 {
		compatible = "st,lis3dh", "st,lis2dh";
		reg = <0x18>;
	};	
};

&sercom5 {
	status = "okay";
	compatible = "atmel,sam0-spi";
	#address-cells = <1>;
	#size-cells = <0>;
	dipo = <2>; // MISO (on PAD2) as DI
	dopo = <0>; // MOSI (on PAD0) as DO

	pinctrl-0 = <&sercom5_spi_default>;
	pinctrl-names = "default";

	cs-gpios = <&portb 1 GPIO_ACTIVE_LOW>;
};

&sercom6 {
	status = "okay";
	compatible = "atmel,sam0-spi";
	#address-cells = <1>;
	#size-cells = <0>;
	dipo = <2>; // MISO (on PAD2) as DI
	dopo = <0>; // MOSI (on PAD0) as DO

	pinctrl-0 = <&sercom6_spi_default>;
	pinctrl-names = "default";

	cs-gpios = <&portc 19 GPIO_ACTIVE_LOW>;

	// sdhc0: sdhc@0 {
	// 	compatible = "zephyr,sdhc-spi-slot";
	// 	reg = <0>;
	// 	status = "okay";
	// 	sdmmc {
	// 		compatible = "zephyr,sdmmc-disk";
	// 		status = "okay";
	// 	};
	// 	spi-max-frequency = <24000000>;
	// };

};

&sercom7 {
	status = "okay";
	compatible = "atmel,sam0-spi";
	#address-cells = <1>;
	#size-cells = <0>;
	dipo = <2>; // MISO (on PAD2) as DI
	dopo = <2>; // MOSI (on PAD3) as DO

	pinctrl-0 = <&sercom7_spi_default>;
	pinctrl-names = "default";

	cs-gpios = <&portb 21 GPIO_ACTIVE_LOW>;

	ili9341: ili9341@0 {
		compatible = "ilitek,ili9341";
		spi-max-frequency = <24000000>;
		reg = <0>;
		cmd-data-gpios = <&portc 6 GPIO_ACTIVE_LOW>;
		reset-gpios = < &portc 7 GPIO_ACTIVE_LOW  >;
		pixel-format = <0>;
		rotation = <270>;
		width = <320>;
		height = <240>;
	};


};


&dmac {
	status = "okay";
};

&flash0 {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		boot_partition: partition@0 {
			label = "uf2";
			reg = <0x00000000 DT_SIZE_K(16)>;
			read-only;
		};

		code_partition: partition@4000 {
			label = "code";
			reg = <0x4000 DT_SIZE_K(512-16)>;
			read-only;
		};
	};
};

zephyr_udc0: &usb0 {
	status = "okay";

	pinctrl-0 = <&usb_dc_default>;
	pinctrl-names = "default";

	cdc_acm_uart0: cdc_acm_uart0 {
		compatible = "zephyr,cdc-acm-uart";
	};

};
